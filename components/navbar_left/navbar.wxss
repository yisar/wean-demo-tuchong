.navbar {
  width: 100vw;
  background-color: #009688;
  position: fixed;
  z-index: 4;
  top: 0;
}

.title-container {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
}

.capsule {
  margin-left: 10px;
  /* height: 32px; */
  /* border: 1px solid #777; */
  height: 28px;
  border: 1px solid #eee;
  border-radius: 16px;
  display: flex;
  align-items: center;
}

.capsule > view {
  /* width: 32px; */
  width: 34px;
  height: 60%;
  position: relative;
}

.capsule > view:nth-child(2) {
  /* border-left: 1px solid #777;*/
  border-left: 1px solid #eee;  
}

.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.title {
  color: white;
  position: absolute;
  left: 20px;
  /* right: 104px; */
  font-size: 22px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}