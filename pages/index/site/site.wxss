/* pages/index/site/site.wxss */
.container{
  background-color: #fff;
  margin-top: 40px;
}

/* 头部 */
.site-box{
  padding: 20px;
  padding-top: 10px;
  color: #fff;
  background-color: #009688;
  display: flex;
  flex-direction: column;
}
/* 头 */
.site-header{
  display: flex;
  flex-direction: row;
  align-items: center;
}
/* 头像 */
.site-header-image{
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}
/* 昵称 */
.site-header-name{
  font-size: 60rpx;
  font-weight: 600;
  margin-left: 10px;
  word-break: break-all;
}
/* 简介 */
.site-intro{
  font-size: 28rpx;
  margin-top: 10px;
  word-break: break-all;
}
/* 信息 */
.site-info{
  margin-top: 10px;
}
.follow-text{
  font-size: 28rpx;
}
.follow-num{
  font-size: 36rpx;
  font-weight: bold;
}
.fans-text{
  font-size: 28rpx;
  margin-left: 20px;
}
.fans-num{
  font-size: 36rpx;
  font-weight: bold;
}

/* 功能条 */
.func-bar{
  background-color: #F2AA24;
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
}
.production{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}
.production-num{

}
.production-text{

}
.favorite{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 34%;
}
.favorite-num{

}
.favorite-text{

}
.activity{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}
.activity-num{

}
.activity-text{

}

/* 图文作品集 */
.post-item-box{
  position: relative;
  background-color: #fff;
  padding: 2vw;
}
.post-item{
  position: relative;
  display: inline-block;
  padding: 1vw;
  background-color: #fff;
}
.post-item-title{   /*标题栏*/
  position: absolute;
  top: 1vw;
  left: 1vw;
  height: auto;
  width: 46vw;
  text-align: center;
  line-height: 32rpx;
  font-size: 24rpx;
  background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0));
  padding-top: 1vw;
  padding-bottom: 4px;
  border-radius: 5px 5px 0 0;
}
.post-item-title text{
  color: #fff;
}
.post-item-image{  /*图片*/
  width: 46vw;
  height: 46vw;
  border-radius: 5px;
  box-shadow: 1px 2px 4px #666;
}
.post-item-footer-func{   /*功能栏*/
  position: absolute; 
  height: 44rpx;
  width: 46vw;
  left: 1vw;
  bottom: 2vw;
  background: linear-gradient(rgba(0, 0, 0, 0),rgba(0, 0, 0, 0.6));
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  padding-top: 2px;
  padding-bottom: 1vw;
  border-radius: 0 0 5px 5px;
}
.post-item-footer-icon{
  height: 38rpx;
  width: 38rpx;
  margin-left: 10px;
}
.likes-num,.comments-num,.photos-num{
  color: #fff;
  font-size: 24rpx;
  margin-left: 4px;
}

/*没有数据，正在加载*/
.loading{
  text-align: center;
  padding-top: 60rpx;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading image{
  height: 80rpx;
  width: 80rpx;
  animation: que 1.6s linear infinite;
}
@keyframes que{
  /*以百分比来规定改变发生的时间 也可以通过"from"和"to",等价于0% 和 100%*/
  0%{
    /*rotate(2D旋转) scale(放大或者缩小) translate(移动) skew(翻转)*/
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.no-data{
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}